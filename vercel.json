{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(css|js)/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "outputDirectory": "public"
}
